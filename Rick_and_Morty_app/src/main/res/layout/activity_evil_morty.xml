<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#002A49">

    <!-- White rounded rectangle with text -->

    <!-- ImageView below the rectangle -->

    <LinearLayout
        android:id="@+id/rectangleLayout"
        android:layout_width="252dp"
        android:layout_height="151dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237"
        app:layout_constraintWidth_percent="0.5">

        <!-- Text inside the rectangle -->
        <TextView
            android:id="@+id/textViewEvilMorty"
            android:layout_width="226dp"
            android:layout_height="121dp"
            android:gravity="center"
            android:text="Access denied. You are not welcome here Evil Morty!"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewEvilMorty"
        android:layout_width="400dp"
        android:layout_height="430dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fuk_rick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangleLayout"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
