<?xml version="1.0" encoding="utf-8"?>
<!-- activity_other_decisive.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#002A49">

    <androidx.cardview.widget.CardView
        android:layout_width="295dp"
        android:layout_height="163dp"
        app:cardBackgroundColor="#CCCCCC"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="30dp">  <!-- Set your desired grey color here -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TextView for displaying text -->
            <TextView
                android:id="@+id/accessText"
                android:layout_width="270dp"
                android:layout_height="141dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="Text sample"
                android:textColor="#002A49"
                android:textSize="20sp" />

        </RelativeLayout>
        <!-- Content inside the CardView (your rectangle) -->

    </androidx.cardview.widget.CardView>

    <!-- Content inside the second CardView -->

    <Button
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:text="Go in!"
        android:textSize="30sp"
        android:id="@+id/procceedButton"/>


    <ImageView
        android:layout_width="500dp"
        android:layout_height="287dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/access_rick" />


</LinearLayout>
